<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:ShopApp.Views"
             x:Class="ShopApp.Views.HelpSupportPage">

    <ContentPage.Resources>
        <views:HelpSupportData x:Key="data" VisitasPendientes="10"/>
    </ContentPage.Resources>

    <VerticalStackLayout x:Name="container">
        <Label 
            Text="{Binding Source={StaticResource data}, 
                Path=VisitasPendientes, 
                Mode=OneWay}" />
        <Button 
            Text="Actualizar"
            Clicked="Button_Clicked"/>    
        
    </VerticalStackLayout>

</ContentPage>

    